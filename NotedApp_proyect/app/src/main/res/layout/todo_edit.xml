<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/bottAtrasTodo"
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:layout_marginStart="10sp"
        android:layout_marginTop="19dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="?attr/actionModeCloseDrawable">
    </ImageView>
    <TextView
        android:id="@+id/textOpcions"
        android:layout_width="330sp"
        android:layout_height="50sp"
        app:layout_constraintStart_toEndOf="@+id/bottAtrasTodo"
        android:layout_marginTop="9sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="3sp"
        android:text="Opcions"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="20sp">


    </TextView>
    <LinearLayout
        android:id="@+id/linarTodo1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15sp"
        android:layout_marginTop="25sp"
        android:layout_marginRight="15sp"
        android:orientation="vertical"
        android:background="@drawable/layout_bg"
        app:layout_constraintTop_toBottomOf="@id/textOpcions">


        <EditText
            android:id="@+id/todoTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:background="#00FFFFFF"
            android:hint="Titulo"
            android:importantForAutofill="no"
            android:inputType="text"
            android:minHeight="45sp">


        </EditText>
        <ImageView
            android:layout_width="match_parent"
            android:layout_marginLeft="9sp"
            android:layout_marginRight="9sp"
            android:layout_height="1sp"
            android:src="@drawable/divider"
            android:background="#DCDCDC">

        </ImageView>

        <EditText
            android:id="@+id/todoSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginLeft="10sp"
            android:background="#00FFFFFF"
            android:gravity="top"
            android:hint="Cuerpo"
            android:importantForAutofill="no"
            android:minHeight="120sp">

        </EditText>
    </LinearLayout>



    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15sp"
        android:layout_marginTop="45sp"
        android:layout_marginRight="15sp"
        android:orientation="vertical"
        android:background="@drawable/layout_bg"
        app:layout_constraintTop_toBottomOf="@id/prioritylayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:layout_marginTop="5sp"
                    android:id="@+id/AddCalendar"
                    android:layout_width="320sp"
                    android:layout_height="25sp"
                    android:layout_marginLeft="10sp"
                    android:background="#00FFFFFF"
                    android:importantForAutofill="no"
                    android:inputType="text"
                    android:minHeight="60sp"
                    android:textColor="@color/black"
                    android:text="Data del recordatori:">


                </TextView>

                <TextView
                    android:id="@+id/addCalendarset"
                    android:layout_width="320sp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:background="#00FFFFFF"
                    android:gravity="center"
                    android:importantForAutofill="no"
                    android:inputType="text"
                    android:textColor="@color/black"
                    android:minHeight="60sp"
                    android:text="Encara no has afegit una data"
                    android:textSize="20sp">


                </TextView>
            </LinearLayout>

            <ImageView
                android:id="@+id/calendarButton"
                android:layout_marginLeft="5sp"
                android:layout_width="35sp"
                android:layout_height="match_parent"
                android:src="@drawable/calendar">

            </ImageView>

        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_marginLeft="9sp"
            android:layout_marginRight="9sp"
            android:layout_height="1sp"
            android:src="@drawable/divider"
            android:background="#DCDCDC">

        </ImageView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/AddCalendar2"
                    android:layout_width="320sp"
                    android:layout_height="25sp"
                    android:layout_marginLeft="10sp"
                    android:background="#00FFFFFF"
                    android:importantForAutofill="no"
                    android:inputType="text"
                    android:textColor="@color/black"
                    android:minHeight="60sp"
                    android:text="Hora del recordatori:">


                </TextView>

                <TextView
                    android:textColor="@color/black"
                    android:id="@+id/addCalendarset2"
                    android:layout_width="320sp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:background="#00FFFFFF"
                    android:gravity="center"
                    android:importantForAutofill="no"
                    android:inputType="text"
                    android:minHeight="60sp"
                    android:text="Encara no has afegit una hora"
                    android:textSize="20sp">


                </TextView>
            </LinearLayout>

            <ImageView
                android:id="@+id/hourButton"
                android:layout_marginLeft="5sp"
                android:layout_width="35sp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_baseline_watch_later_24">

            </ImageView>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15sp"
        android:layout_marginTop="45sp"
        android:layout_marginBottom="5sp"
        android:layout_marginRight="15sp"
        android:orientation="vertical"
        android:id="@+id/prioritylayout"
        android:background="@drawable/layout_bg"
        app:layout_constraintTop_toBottomOf="@id/linarTodo1">


        <LinearLayout
            android:id="@+id/layout_opciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="10sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
                <View
                    android:id="@+id/priorityHigh"
                    android:layout_width="35sp"
                    android:layout_height="35sp"
                    android:background="@drawable/ic_red">

                </View>
                <ImageView
                    android:id="@+id/checkHigh"
                    android:layout_width="35sp"
                    android:layout_height="35sp"
                    android:padding="10sp"

                    >


                </ImageView>

            </FrameLayout>
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <View
                    android:id="@+id/priorityMedium"

                    android:layout_width="35sp"
                    android:layout_height="35sp"
                    android:background="@drawable/ic_yellow">

                </View>
                <ImageView
                    android:id="@+id/checkMedium"
                    android:layout_width="35sp"
                    android:layout_height="35sp"
                    android:padding="10sp">


                </ImageView>

            </FrameLayout>

            <FrameLayout
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <View
                    android:id="@+id/priorityLow"

                    android:layout_width="35sp"
                    android:layout_height="35sp"
                    android:background="@drawable/ic_green">

                </View>
                <ImageView
                    android:id="@+id/checkLow"
                    android:layout_width="35sp"
                    android:layout_height="35sp"
                    android:padding="10sp"
                    >


                </ImageView>

            </FrameLayout>
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <View
                    android:layout_width="35sp"
                    android:layout_height="35sp"
                    android:background="@drawable/layout_bg">

                </View>
                <ImageView
                    android:id="@+id/priorityNone"
                    android:layout_width="35sp"
                    android:layout_height="35sp"
                    android:padding="10sp"
                    android:layout_marginRight="5sp"
                    android:src="@drawable/ic_baseline_close_24">

                </ImageView>
            </FrameLayout>

        </LinearLayout>





        <LinearLayout
            android:id="@+id/layout_priority"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:layout_marginLeft="10sp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <FrameLayout
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
                <TextView
                    android:layout_width="35sp"
                    android:layout_height="35sp"
                    android:text="HIGH"
                    android:textColor="@color/black">

                </TextView>


            </FrameLayout>
            <FrameLayout
                android:layout_width="11sp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="35sp"
                    android:text="MEDIUM"
                    android:textColor="@color/black">

                </TextView>



            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="35sp"
                    android:text="LOW"
                    android:textColor="@color/black">

                </TextView>




            </FrameLayout>
            <FrameLayout
                android:layout_width="42sp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="35sp"
                    android:text="NONE"
                    android:textColor="@color/black">

                </TextView>
            </FrameLayout>

        </LinearLayout>


        </LinearLayout>









</androidx.constraintlayout.widget.ConstraintLayout>

