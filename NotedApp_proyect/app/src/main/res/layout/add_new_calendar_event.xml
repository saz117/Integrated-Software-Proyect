<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/md_deep_purple_500">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_margin="20sp"
        android:background="@color/white"
        android:hint="New event"
        android:inputType="textShortMessage"
        android:layout_gravity="center">

    </EditText>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/calendar_set_time"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_margin="10sp"
            android:background="@android:drawable/ic_menu_recent_history">
        </ImageButton>

        <TextView
            android:id="@+id/calendar_event_time"
            android:layout_width="93dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10sp"
            android:text="00:00"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold">

        </TextView>

        <Button
            android:id="@+id/calendar_add_event_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add event"
            android:layout_margin="10sp"
            android:textStyle="bold"
            android:layout_gravity="center">

        </Button>

    </LinearLayout>

</LinearLayout>